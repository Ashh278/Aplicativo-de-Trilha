<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Cor de fundo do botão quando pressionado -->
            <corners android:radius="8dp" /> <!-- Define o raio dos cantos do botão (arredondamento) -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/teal_700" /> <!-- Cor de fundo do botão quando não pressionado -->
            <corners android:radius="8dp" /> <!-- Define o raio dos cantos do botão (arredondamento) -->
        </shape>
    </item>
</selector>
