<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfigActivity">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Unidade de velocidade"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km/h (quilômetro por hora)"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="m/s (metros por segundo)"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup1"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Formato das coordenadas geográficas"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graus"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Graus-Minutos"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Graus-Minutos-Segundos"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup2"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Orientação do Mapa"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Up"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Course Up"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/radioGroup3"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="Orientação do Mapa"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nenhuma"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->

        <RadioButton
            android:id="@+id/option10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="North Up"
            android:textColor="#FFFFFF" /> <!-- Alteração para branco -->
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSalvar"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup4"
        tools:layout_editor_absoluteX="161dp" />

    <!-- Adicionando meu nome -->
    <TextView
        android:id="@+id/meu_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assistente"
        android:textColor="#FFFFFF" /> <!-- Alteração para branco -->
</androidx.constraintlayout.widget.ConstraintLayout>
